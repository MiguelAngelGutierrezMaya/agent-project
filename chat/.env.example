# Application Configuration
PORT=3000
NODE_ENV=development

# AWS Configuration
AWS_REGION=us-east-1
BUCKET_NAME=
FILE_PRESIGNED_EXPIRES_IN=

# SQS Configuration
CONFIG_NOTIFICATIONS_QUEUE_URL=

# MongoDB Configuration
# =====================

# MongoDB Cluster Connection URI
# Local: mongodb://localhost:27017
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017

# Public Database Name
# This database contains shared information (user mappings, etc.)
MONGODB_PUBLIC_DATABASE=chat_public

# Connection Pool Configuration (Optional)
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# WhatsApp/Facebook Configuration
# ================================

# WhatsApp Webhook Verification Token
# Used to verify webhook requests from Meta
WHATSAPP_TOKEN=your_verify_token_here

# Azure OpenAI Configuration
# ===========================

# Azure OpenAI API Key
# Get this from Azure Portal > Azure OpenAI Service > Keys and Endpoint
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Azure OpenAI Endpoint
# Format: https://your-resource-name.openai.azure.com/
# Example: https://my-openai-instance.openai.azure.com/
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# OpenAI Configuration
# ===========================

# OpenAI API Key
# Get this from Open AI Portal
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Configuration
# =========================

# PostgreSQL Server Host
# Local: localhost
# Remote: your-postgres-host.com
DATABASE_HOST=localhost

# PostgreSQL Server Port
# Default PostgreSQL port is 5432
DATABASE_PORT=5432

# PostgreSQL Database Name
# The main database name for your application
DATABASE_NAME=your_database_name

# PostgreSQL Username
# Database user with appropriate permissions
DATABASE_USER=your_database_user

# PostgreSQL Password
# Database user password
DATABASE_PASSWORD=your_database_password
